<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#ADD8E6">

    <TextView
        android:id="@+id/tvResetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Reset Password?"
        android:textColor="#00008B"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please type a new password and re-enter the password. Type something you will remember!"
        android:textSize="14sp"
        android:textColor="#656565"
        android:layout_below="@id/tvResetPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvNewPasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@id/tvInstructions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/etNewPassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter New Password"
        android:layout_below="@id/tvNewPasswordLabel"
        android:background="#E8E8E8"
        android:padding="12dp" />

    <TextView
        android:id="@+id/tvConfirmPasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@id/etNewPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Re-enter Password"
        android:layout_below="@id/tvConfirmPasswordLabel"
        android:background="#E8E8E8"
        android:padding="12dp" />

    <Button
        android:id="@+id/btnResetPassword"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Reset Password"
        android:layout_below="@id/etConfirmPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_edit_text"
        android:textColor="#0051B5" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't want to reset password?"
        android:textSize="14sp"
        android:textColor="#0000FF"
        android:layout_below="@id/btnResetPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/tvLoginAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="14sp"
        android:textColor="#0000FF"
        android:layout_toRightOf="@id/tvLogin"
        android:layout_alignTop="@id/tvLogin"
        android:clickable="true"
        android:focusable="true" />

</RelativeLayout>
